@inject GameStateService GameState

<section class="board">
    <header>
        <h3>@Title</h3>
    </header>
    <div class="grid" role="grid" aria-label="@Title">
        @for (var y = 0; y < GameState.GridSize; y++)
        {
            <div class="grid-row" role="row">
                @for (var x = 0; x < GameState.GridSize; x++)
                {
                    var cellX = x;
                    var cellY = y;
                    <button class="@GetCellClass(cellX, cellY)"
                            role="gridcell"
                            disabled="@IsCellDisabled(cellX, cellY)"
                            @onclick="() => HandleCellClick(cellX, cellY)">
                        @if (IsPlayerGrid)
                        {
                            var value = GetPlayerCellValue(cellX, cellY);
                            if (value == "X")
                            {
                                <img src="images/hit.png" alt="Hit" />
                            }
                            else if (value == "O")
                            {
                                <img src="images/miss.png" alt="Miss" />
                            }
                            else if (!string.IsNullOrWhiteSpace(value))
                            {
                                <img src="@($"images/ships/ship{value}.png")" alt="Ship" />
                            }
                        }
                        else
                        {
                            var state = GetOpponentCellState(cellX, cellY);
                            if (state == CellShotState.Hit)
                            {
                                <img src="images/hit.png" alt="Hit" />
                            }
                            else if (state == CellShotState.Miss)
                            {
                                <img src="images/miss.png" alt="Miss" />
                            }
                        }
                    </button>
                }
            </div>
        }
    </div>
</section>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public bool IsPlayerGrid { get; set; }
    [Parameter] public EventCallback<(int x, int y)> OnCellClicked { get; set; }

    private async Task HandleCellClick(int x, int y)
    {
        if (OnCellClicked.HasDelegate && !IsCellDisabled(x, y))
        {
            await OnCellClicked.InvokeAsync((x, y));
        }
    }

    private string GetPlayerCellValue(int x, int y)
    {
        return TryGetPlayerCell(x, y, out var value) ? value : string.Empty;
    }

    private CellShotState GetOpponentCellState(int x, int y)
    {
        return TryGetOpponentCell(x, y, out var state) ? state : CellShotState.Unknown;
    }

    private bool IsCellDisabled(int x, int y)
    {
        if (GameState.Status != GameStatus.InProgress)
        {
            return true;
        }

        if (IsPlayerGrid)
        {
            return true;
        }

        CellShotState cell;
        if (!TryGetOpponentCell(x, y, out var existingCell))
        {
            cell = CellShotState.Unknown;
        }
        else
        {
            cell = existingCell;
        }

        if (GameState.IsMultiplayer && !GameState.IsPlayerTurn)
        {
            return true;
        }

        return cell != CellShotState.Unknown;
    }

    private string GetCellClass(int x, int y)
    {
        var classes = new List<string> { "grid-cell" };
        if (IsPlayerGrid)
        {
            classes.Add("player");
            if (TryGetPlayerCell(x, y, out var value))
            {
                if (value == "X")
                {
                    classes.Add("hit");
                }
                else if (value == "O")
                {
                    classes.Add("miss");
                }
                else if (!string.IsNullOrWhiteSpace(value))
                {
                    classes.Add("ship");
                }
            }
        }
        else
        {
            classes.Add("opponent");
            if (TryGetOpponentCell(x, y, out var state))
            {
                if (state == CellShotState.Hit)
                {
                    classes.Add("hit");
                }
                else if (state == CellShotState.Miss)
                {
                    classes.Add("miss");
                }
            }
        }

        if (!IsCellDisabled(x, y))
        {
            classes.Add("clickable");
        }

        return string.Join(" ", classes);
    }

    private bool TryGetPlayerCell(int x, int y, out string value)
    {
        value = string.Empty;
        if (GameState.PlayerGrid.Length == 0 || y < 0 || y >= GameState.PlayerGrid.Length)
        {
            return false;
        }

        var row = GameState.PlayerGrid[y];
        if (row.Length == 0 || x < 0 || x >= row.Length)
        {
            return false;
        }

        value = row[x];
        return true;
    }

    private bool TryGetOpponentCell(int x, int y, out CellShotState value)
    {
        value = CellShotState.Unknown;
        if (GameState.OpponentGrid.Length == 0 || y < 0 || y >= GameState.OpponentGrid.Length)
        {
            return false;
        }

        var row = GameState.OpponentGrid[y];
        if (row.Length == 0 || x < 0 || x >= row.Length)
        {
            return false;
        }

        value = row[x];
        return true;
    }
}

